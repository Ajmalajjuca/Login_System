<%- include('header') %>

<div class="main">
  <p class="sign" align="center">Sign in</p>
  <div class="<%= locals.logout ? 'green_class' : 'red_class' %>">
    <% if(locals.logout){
       %> <%= logout %> <% 
      }else {
       %> <%= locals.logout_err %> <% 
      } %>
  </div>
  <form action="/login" method="post" class="form1">
    <input class="un" type="text" align="center" placeholder="Email" name="email"/>
    <input class="pass" type="password" align="center" placeholder="Password" name="password"/>
    <button type="submit" class="submit" align="center">Sign in</button>
    <!-- <p class="forgot" align="center"><a href="#">Forgot Password?</a></p> -->
  </form>
</div>

<%- include('footer') %>
